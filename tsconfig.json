{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"noUnusedLocals": true,
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["./assets/*"],
			"@components/*": ["./components/*"],
			"@constants/*": ["./constants/*"],
			"@locales/*": ["./locales/*"]
		}
	}
}
